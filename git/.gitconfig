[user]
    name = Grant Forsythe
    email = grantwforsythe@gmail.com
    username = grantwforsythe
[core]
    editor = nvim
[log]
    follow = true
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[alias]
    amend = commit --amend --no-edit
    blame = blame --color-lines --color-by-age -w -M3
    br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
    last = "!git --no-pager log -1 HEAD"
    lg = "!git log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) %C(blue)[%an]\" --abbrev-commit -30"
    logp = log --oneline --graph --decorate --abbrev-commit --all
    nuke = "!git reset --hard && git clean -f"
    rename = branch -M
    s = status
    sw = switch
    swc = switch --create
    undo = reset HEAD~ --mixed
    unstage = reset HEAD --
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[github]
    user = grantwforsythe
[init]
    defaultBranch = main
[submodule]
    recurse = true
[diff]
    tool = vimdiff
    submodule = log
[fetch]
    # automatically prune when fetching or pulling
    prune = true
[push]
    autoSetupRemote = true
    recurseSubmodules = check
[status]
    submodulesummary = 1
[pager]
	branch = false
