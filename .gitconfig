[user]
    name = Grant Forsythe
    email = grantwforsythe@gmail.com
    username = grantwforsythe
[core]
    editor = vim
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[alias]
    undo = reset HEAD~
    unstage = reset HEAD --
    discard = "!git reset --hard && git clean -f"
    last = log -1 HEAD
    logp = log --oneline --graph --decorate --abbrev-commit --all
    amend = commit --amend --no-edit
    blame = blame --color-lines --color-by-age -w -M3
    rename = branch -M
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[github]
    user = grantwforsythe
[init]
    defaultBranch = main
[submodule]
    recurse = true
[diff]
    tool = vimdiff
[fetch]
    # automatically prune when fetching or pulling
    prune = true
[push]
    autoSetupRemote = true
